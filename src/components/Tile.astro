---
interface Props {
  backgroundColor: string;
  textColor: string;
  score: string;
  name: string;
  iconSrc: string;
}

const { backgroundColor, textColor, score, name, iconSrc } = Astro.props;
---

<div
  class={`flex justify-between ${backgroundColor} bg-opacity-10 p-7 sm:p-3 rounded-xl sm:rounded-lg text-2xl sm:text-lg`}
>
  <div class={`flex gap-3 ${textColor}`}>
    <img src={iconSrc} alt={name} class='w-8 sm:w-5' />{name}
  </div>
  <div class='text-neutral-3 text-opacity-50'>
    <span class='text-neutral-3 text-opacity-100'>{score}</span> / 100
  </div>
</div>
